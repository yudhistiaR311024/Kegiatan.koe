generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum USER_ROLE {
  ADMIN
  MEMBER
  FAKULTAS
}

model RefreshToken {
  id        String    @id @default(uuid())
  token     String    @unique @map("token")
  user      User      @relation(fields: [userId], references: [id])
  userId    String    @map("user_id")
  username  String
  role      USER_ROLE
  expiresAt DateTime  @map("expires_at")
  createdAt DateTime  @default(now())

  @@map("refresh_tokens")
}

model User {
  id                        String         @id @default(uuid())
  externalId                String?        @unique
  imageUrl                  String?
  username                  String         @unique
  email                     String         @unique
  fullName                  String?
  firstName                 String?
  lastName                  String?
  password                  String
  role                      USER_ROLE      @default(MEMBER)
  deleteSelfEnabled         Boolean        @default(true)
  createOrganizationEnabled Boolean        @default(false)
  createOrganizationsLimit  Int?           @default(1)
  hasVerifiedEmailAddress   Boolean        @default(false)
  hasVerifiedPhoneNumber    Boolean        @default(false)
  lastSignInAt              DateTime?
  createdAt                 DateTime       @default(now())
  updatedAt                 DateTime       @updatedAt
  refreshTokens             RefreshToken[]
}

model Organization {
  id                 String   @id @default(uuid())
  externalId         String   @unique
  create_by          String?
  name               String
  slug               String   @unique
  imageUrl           String?
  max_member         Int?     @default(5)
  member_count       Int?     @default(0)
  invitation_pending Int?     @default(0)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}
